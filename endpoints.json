{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },

  "GET /api/users" : {
    "description": "return an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "tickle122",
          "name": "Tom Tickle",
          "avatar_url": "https://vignette.wikia.nocookie.net/mrmen/images/d/d6/Mr-Tickle-9a.png/revision/latest?cb=20180127221953"
        }
      ]
    }
  },

  "GET /api/users/username" : {
    "description": "return a user",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "tickle122",
        "name": "Tom Tickle",
        "avatar_url": "https://vignette.wikia.nocookie.net/mrmen/images/d/d6/Mr-Tickle-9a.png/revision/latest?cb=20180127221953"
      }
    }
  },

  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order", "p", "limit"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_id": 1,
          "article_img_url": "http://google.com",
          "comment_count": 6
        }
      ]
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "serves object of article with ID",
    "queries": [],
    "body": {
      "inc_votes": 100
    },
    "exampleResponse": {
      "newArticle":
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 100,
          "article_id": 1,
          "article_img_url": "http://google.com"
       }
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves object of article with ID",
    "queries": [],
    "exampleResponse": {
      "article":
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_id": 1,
          "article_img_url": "http://google.com",
          "comment_count": 6
       }
    }
  },

  "POST /api/articles": {
    "description": "creates a new article and returns it as an object, has default value for article_img_url which can be overwritten",
    "queries": [],
    "body": {
      "author": "cooljmessy",
      "title": "test",
      "body": "test body",
      "topic": "football",
      "article_img_url": ""
    },
    "exampleResponse": {
      "article": {
        "article_id": 38,
        "title": "test",
        "topic": "football",
        "author": "cooljmessy",
        "body": "test body",
        "created_at": "2023-11-22T09:56:40.703Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700",
        "comment_count": 0
       }
    }
  },

  "POST /api/articles/:article_id/comments" : {
    "description": "creates a comment for an article and returns the comment as a response",
    "queries": [],
    "body": {
      "body": "great cooking content",
      "username": "tickle122"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 304,
        "body": "great cooking content",
        "article_id": 1,
        "author": "tickle122",
        "votes": 0,
        "created_at": "2023-11-20T17:01:34.992Z"
      }
    }
  },

  "DELETE /api/comments/:comment_id" : {
    "description": "deletes a comment by id",
    "queries": [],
    "exampleResponse": {}
  },

  "PATCH /api/comments/:comment_id" : {
    "description": "updates votes of a comment by ID",
    "queries": [],
    "body": {
      "inc_votes": 100
    },
    "exampleResponse": {}
  }
}
